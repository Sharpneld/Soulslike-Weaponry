{
  "schemaVersion": 1,
  "id": "soulsweapons",
  "version": "${version}",

  "name": "Marium's Soulslike Weaponry",
  "description": "Adds lots of legendary weapons and bosses!",
  "authors": [
    "Marium"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/mariums-soulslike-weaponry",
    "issues": "https://github.com/mariumbacchus/Soulslike-Weaponry/issues"
  },

  "license": "CC0-1.0",
  "icon": "assets/soulsweapons/icon.png",

  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "net.soulsweaponry.datagen.DataGeneration"
    ],
    "main": [
      "net.soulsweaponry.SoulsWeaponry"
    ],
    "client": [
      "net.soulsweaponry.client.SoulsWeaponryClient"
    ]
  },
  "mixins": [
    "soulsweapons.mixins.json"
  ],

  "depends": {
    "fabric-key-binding-api-v1": "*",
    "fabricloader": ">=0.14.21",
    "fabric": "*",
    "minecraft": "~1.20",
    "java": ">=17",
    "fabric-api": ">=0.83.0",
    "attributefix": ">=20.0.2",
    "azurelib": "*"
  }
}
